{
  "title": "Tor Arne",
  "rules": [
    {
      "description": "Vim: Left-command alone to escape",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.jetbrains\\.intellij$"
              ]
            }
          ]
        }
      ]
    },
    {
